@model VeterinaryClinicGS.Models.HistoryViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>History</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddHistory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AnimalId" />

            <partial name="_History" />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="DetailsAnimal" asp-route-id="@Model.AnimalId" class="btn btn-success">Back to Animal</a>
            </div>
        </form>
    </div>
</div>
