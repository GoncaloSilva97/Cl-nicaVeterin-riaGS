@model VeterinaryClinicGS.Models.AnimalViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Animal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditAnimal" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="OwnerId" />
            <input type="hidden" asp-for="ImageId" />
            <input type="hidden" asp-for="Born" />


            <partial name="_Pet"/>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.OwnerId" class="btn btn-success">Back to Owner</a>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.ImageFullPath))
        {
            <img src="@Url.Content(Model.ImageFullPath)" alt="Image" style="width:200px;height:200px;max-width: 100%; height: auto;" />   
        }
    </div>
</div>
